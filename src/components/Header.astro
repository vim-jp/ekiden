---
import HeaderLink from "./HeaderLink.astro";

type Props = { slug: string };

const { slug } = Astro.props;
---

<div
  class="w-full bg-ekiden-green-500 font-ekiden-heading text-ekiden-white-500"
>
  <h1 class="py-3 text-center text-4xl"><a href="/ekiden/">Vim 駅伝</a></h1>
  <nav class="flex flex-col justify-center pb-2 text-center md:flex-row">
    <HeaderLink slug={slug} href="/">トップページ</HeaderLink>
    <HeaderLink slug={slug} href="/archives/">アーカイブ</HeaderLink>
    <HeaderLink slug={slug} href="/ranking/">ランキング</HeaderLink>
    <HeaderLink slug={slug} href="/statistics/">統計</HeaderLink>
  </nav>
</div>
